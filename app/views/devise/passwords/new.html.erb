
<div class="row justify-content-center">
  <div class="col-lg-7 col-10 col-sm-7">
    <%= render 'devise/shared/logo' %>

    <h2 class="text-center mb-4">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <p class="text-secondary">
        Enter the email address you used when you joined and weâ€™ll send you instructions 
        to reset your password.
      </p>

      <p class="text-secondary">
        For security reasons, we do <b>NOT</b> store your password. So rest assured that we will never 
        send your password via email.
      </p>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    wrapper: :floating_labels_form,
                    input_html: { autocomplete: 'email' }%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, 'Send reset instructions', class: 'btn btn-orange w-100' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>