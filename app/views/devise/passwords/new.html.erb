<h2 class="text-center mb-4">Esqueceu sua senha?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <p class="text-muted text-center">Informe abaixo o e-mail utilizado ao criar sua conta.</p>
  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                wrapper_html: { class: 'has-float-label'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enviar instruções", class: 'btn btn-orange btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
