 
<div class="row justify-content-center">
  <div class="col-lg-7 col-10 col-sm-7">
    <%= render 'devise/shared/logo' %>

    <h2 class="text-center mb-4"><%= t('passwords.edit') %></h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :reset_password_token, as: :hidden %>

      <div class="form-inputs">
        <%= f.input :password,
                    required: true,
                    autofocus: true,
                    wrapper: :floating_labels_form,
                    hint: ("#{@minimum_password_length} characters minimum." if @minimum_password_length),
                    input_html: { autocomplete: 'new-password', placeholder: 'Your new password' } %>
        <%= f.input :password_confirmation,
                    required: true,
                    wrapper: :floating_labels_form,
                    input_html: { autocomplete: 'new-password', placeholder: 'New password confirmation' } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t('passwords.edit'), class: 'btn btn-primary w-100' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>