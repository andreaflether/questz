<div class="text-center">
  <div class="d-flex align-items-center mt-3 mb-2">
    <div class="flex-fill"><hr /></div>
    <div class="px-3">
      <small class="text-uppercase text-muted">or</small>
    </div>
    <div class="flex-fill"><hr /></div>
  </div>

  <%- if controller_name != 'sessions' %>
    <p class="<%= 'mb-0' if controller_name != 'passwords' %>">
      Already have an account? <b><%= link_to 'Sign in', new_session_path(resource_name) %></b>
    </p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="mb-0">Not a member?  
      <b><%= link_to 'Sign up now', new_registration_path(resource_name) %></b>
    </p>
  <% end %>
</div>