
<div class="row justify-content-center">
  <div class="col-lg-7 col-10 col-sm-7">
    <%= render 'devise/shared/logo' %>

    <h2 class="text-center mb-4"><%= t('app_titles.registrations.new') %></h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      
      <div class="form-inputs">
        <div class="row gx-3">
          <div class="col-lg-6">
            <%= f.input :name, 
                        required: true,
                        wrapper: :floating_labels_form,
                        input_html: { autocomplete: 'name', placeholder: 'Your name' } %>
          
          </div>
          <div class="col-lg-6">
            <%= f.input :username, 
                        required: true,
                        wrapper: :floating_labels_form,
                        input_html: { autocomplete: 'username', placeholder: 'Your username' } %>
          
          </div>
        </div>
        <%= f.input :email,
                    required: true,
                    wrapper: :floating_labels_form,
                    input_html: { autocomplete: 'email', placeholder: 'Your best e-mail' } %>

        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum." if @minimum_password_length),
                    wrapper: :floating_labels_form,
                    input_html: { autocomplete: 'new-password', placeholder: 'Your password' } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t('app_titles.registrations.new'), class: 'btn btn-block btn-primary w-100' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>

