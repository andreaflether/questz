<h6 class="text-danger">Reported content info (<%= @report.reportable_type %>)</h6>

<hr class="dropdown-divider">

<div class="row mt-3">
  <%= render @report.reportable %>
</div>

<% if @report.duplicate? %>
  <h6>Already existing <%= @report.reportable_type %> (informed by the user) info</h6>

  <hr class="dropdown-divider">

  <div class="row mt-3">
    <%= render @report.duplicate %>
  </div>
<% end %>