<div class="row g-3 mb-3">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header bg-white">
        <h6 class="card-title py-2 mb-0">
          <i class="fas fa-question-circle me-2"></i>
          <%= t('app_titles.cards.new_questions') %>
        </h6>
      </div>
      <div class="card-body">
        <%= column_chart @questions %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card">
      <div class="card-header bg-white">
        <h6 class="card-title py-2 mb-0">
          <i class="fas fa-tags me-2"></i>
          <%= t('app_titles.cards.top_tags') %>
        </h6>
      </div>
      <div class="card-body">
        <%= bar_chart @tags %>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <div class="card">
      <div class="card-header bg-white">
        <h6 class="card-title py-2 mb-0">
          <i class="fas fa-user me-2"></i>
          <%= t('app_titles.cards.new_users') %>
        </h6>
      </div>
      <div class="card-body">
        <%= line_chart @users %>
      </div>
    </div>
  </div>
</div>
