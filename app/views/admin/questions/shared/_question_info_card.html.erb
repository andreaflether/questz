<div class="card text-center">
  <div class="card-body text-secondary">
    <h6 class="text-primary mb-3">Question info</h6>
    <div class="question-stats d-flex border-top border-bottom py-3">
      <div class="flex-fill">
        <i class="fas fa-caret-up fa-lg me-1"></i> <%= question.cached_votes_up %> 
      </div>
      <div class="flex-fill">
        <i class="fas fa-caret-down fa-lg me-1"></i> <%= question.cached_votes_down %> 
      </div>
      <div class="flex-fill">
        <i class="fas fa-eye me-1"></i> <%= question.impressions_count %> 
      </div>
      <div class="flex-fill">
        <i class="fas fa-comment me-1"></i> <%= question.answers_count %>
      </div>
    </div>
    <span class="badge bg-<%= get_class_for_question_status(question.status) %> mt-3">
      <%= question.status.humanize %>
      <% if question.closed? %>
      - <%= question.closing_notice.humanize %>
      <% end %>
    </span>
  </div>
</div>