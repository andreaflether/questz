<div class="list-group followed-tags">
  <%= link_to root_path, class: 'list-group-item list-group-item-action active' do %>
    <i class="fas fa-newspaper"></i>&nbsp; Feed
  <% end %>
  <% if @tags.any? %>
    <% @tags.each do |tag| %>
      <%= link_to tag.name, tag_path(tag), class: 'list-group-item list-group-item-action' %>
    <% end %>

  <% else %>
    <p class="text-muted mt-2">You're not following any tags just yet.</p>
  <% end %>
</div>