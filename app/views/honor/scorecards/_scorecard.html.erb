<li class="list-group-item d-flex flex-lg-column flex-xl-row justify-content-between align-items-center">
  <div class="d-flex ">
    <% if scorecard.user.avatar? %>
      <%= image_tag(scorecard.user.avatar_url, 
        class: 'rounded-circle user-avatar-40 me-2') %>
    <% else %>
      <%= image_tag 'no-avatar.png',
      class: 'rounded-circle user-avatar-40 border me-2' %>
    <% end %>

    <div class="d-inline-flex flex-column">
      <%= link_to scorecard.user.username, profile_path(scorecard.user), class: 'fw-bold' %>
        <span class="text-muted small">
        <% if local_assigns[:tag_only] %>
          <%= pluralize(scorecard.user.chosen_answers_count, 'solved question') %>
        <% end %>
        <% if local_assigns[:top_ranking] %>
          <%= pluralize(scorecard.user.solved_questions, 'solved question') %>
        <% end %>
      </span>
    
    </div>
  </div>

  <span class="user-score">
    <i class="fas fa-medal <%= get_badge_type((scorecard_iteration.index + 1).humanize) %>"></i> 
    <%= number_to_human(scorecard.user.points_total) %> XP
  </span>
</li>