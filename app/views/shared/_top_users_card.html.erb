<div class="card">
  <div class="card-header py-3 bg-white">
    <h6 class="card-title mb-0">
      <i class="fas fa-trophy small"></i>&nbsp;
      <% if local_assigns[:tag] %>
        Top answerers in <span class="text-orange"><%= tag.name %></span>
      <% else %>
        Top users
      <% end %>
    </h6>
  </div>
  <% if @top_users.any? %>
    <ul class="list-group list-group-flush bg-light top-users">
      <%= render @top_users, local_assigns %>
    </ul>
  <% else %>
    <div class="card-body">
      <p class="mb-0">No users to display.</p>
    </div>
  <% end %>
</div>