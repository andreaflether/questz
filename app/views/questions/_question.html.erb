<div class="card mb-4 question" id="question_<%= question.id %>">

  <div class="card-body">
    <div class="d-flex">
      <%= link_to profile_path(question.user), class: 'mb-auto' do %>
        <% if question.user.avatar? %>
          <%= image_tag(question.user.avatar_url, 
            class: 'img-fluid rounded-circle user-avatar me-2',
            id: 'user-avatar') %>
        <% else %>
          <%= image_tag 'no-avatar.png',
          class: 'img-fluid rounded-circle user-avatar me-2', 
          id: 'user-avatar' %>
        <% end %>
      <% end %>

      <div class="flex-fill">
        <%= link_to question.title, question_path(question), class: 'fw-normal text-dark question-title' %>   
      
        <div class="d-flex my-2 question-stats text-muted">
          <div class="answers">
            <i class="far fa-comment"></i> <%= pluralize(question.answers_count, 'answer') %>
          </div>
          <div class="votes-up-on-question">
            <i class="fas fa-caret-up fa-lg"></i> <%= pluralize(question.cached_votes_up, 'upvote') %>
          </div>
          <div class="views">
            <i class="far fa-eye"></i> <%= pluralize(question.impressions_count, 'view') %>
          </div>
        </div>
        <div class="d-flex justify-content-between align-items-center">
          <div class="tags mt-2">
            <% question.tags.each do |tag| %>
              <%= link_to tag_path(tag) do %>
                <span class="badge question-tag"><%= tag.name %></span>
              <% end %>
            <% end %>
          </div>
          <div class="created-at small">
            <span class="text-muted me-3">Asked <%= time_ago_in_words(question.created_at) %> ago</span>
            <span class='fw-bold text-orange'>
              <% if question.answered? %>
                <i class='fas fa-check'></i> Answered
              <% else %>
                <%= question.status.capitalize %>
              <% end %>
            </span>
          </div>
        </div>
      </div>   
    </div>
  </div>
</div>