<% if current_user.disliked?(question) %>
  <%= link_to like_question_path(question),
    method: :patch,
    remote: true,
    class: 'text-muted like' do %>
    <i class="far fa-thumbs-up"></i> 
  <% end %>
  <span class="vote-count"><%= question.get_upvotes.size %></span>
  <%= link_to undislike_question_path(question),
    method: :patch,
    remote: true,
    class: 'text-danger dislike' do %>
    <i class="fas fa-thumbs-down"></i> 
  <% end %>
  <span class="vote-count"><%= question.get_downvotes.size %></span>
<% elsif current_user.liked?(question) %>
  <%= link_to unlike_question_path(question),
    method: :patch,
    remote: true,
    class: 'text-success like' do %>
    <i class="fas fa-thumbs-up"></i> 
  <% end %>
  <span class="vote-count"><%= question.get_upvotes.size %></span>
  <%= link_to dislike_question_path(question),
    method: :patch,
    remote: true,
    class: 'text-muted dislike' do %>
    <i class="far fa-thumbs-down"></i> 
  <% end %>
  <span class="vote-count"><%= question.get_downvotes.size %></span>
<% else %>
  <%= link_to like_question_path(question),
    method: :patch,
    remote: true,
    class: 'text-muted like' do %>
    <i class="far fa-thumbs-up"></i> 
  <% end %>
  <span class="vote-count"><%= question.get_upvotes.size %></span>
  <%= link_to dislike_question_path(question),
    method: :patch,
    remote: true,
    class: 'text-muted dislike' do %>
    <i class="far fa-thumbs-down"></i> 
  <% end %>
  <span class="vote-count"><%= question.get_downvotes.size %></span>
<% end %>