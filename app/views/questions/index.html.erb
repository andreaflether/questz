<div class="row">
  <div class="col-md-9 mt-4 mb-3">
    <div class="d-flex align-items-center justify-content-between">
      <h5 class="mb-0">
        <%= t('app_titles.questions.index') %>
      </h5>
      <%= render 'questions/nav_tabs' %>
    </div>
  </div>

  <div class="col-lg-9 col-md-12 order-2 order-lg-1">
    <% if @questions.any? && !@message %>
      <%= render @questions %>
      <div class="d-flex flex-column flex-lg-row justify-content-between align-items-center mb-3">
        <div class="entries-info text-center">
          <%= page_entries_info @questions %>
        </div>
        <div class="questions-pagination">
          <%= paginate @questions %>
        </div>
      </div>
    <% else %>
      <h5 class="fw-normal text-center mt-3">
        <%= raw @message || 'No questions to display.' %>
      </h5>
    <% end %>
  </div>
    <div class="col-lg-3 col-md-12 order-1 order-lg-2 mb-3">
      <div class="row">
        <div class="col-md-12">
          <%= render 'shared/top_users_card', collection: @top_users, top_ranking: true %>
        </div>
      </div>
    </div>
  </div>
</div>