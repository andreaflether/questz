  reverse: true,
  separator: '/',
  description: t('app.description'),
  keywords: 'Questions, Forum, Questz',
  og: {
    title: :title,
    description: :description
  },
  twitter: {
    card: 'summary',
    title: :title,
    site_name: :site,
