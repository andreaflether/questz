      <%= link_to root_path, class: 'd-flex align-items-center' do %>
        <%= image_tag('logo.png') %> <span class="ms-2 text-light">Questz</span>
      <% end %>
    </h2>
    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <%= active_link_to 'Questions', questions_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= active_link_to 'Tags', tags_path, class: 'nav-link' %>
        </li>
      </ul>
      <ul class="navbar-nav ms-auto mb-0 align-items-center">
        <% if user_signed_in? %>
          <li class="nav-item" >
            <%= active_link_to root_path, 
              active: [questions: :feed, pages: :home], 
              class: 'nav-link',
              title: t('app_titles.questions.feed') do %>
              <i class="fas fa-home fa-lg"></i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= active_link_to reputation_path, class: 'nav-link', title: t('app_titles.profiles.reputation') do %>
              <i class="fas fa-star fa-lg"></i>
            <% end %>
          </li>
          <li class="nav-item" title="<%= t('app_titles.notifications_with_devise.index')%>">
            <%= render_notifications_of current_user, fallback: :default, index_content: :with_attributes, devise_default_routes: respond_to?('notifications_path'), limit: 5 %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" 
              role="button" 
              id="profile" 
              data-bs-toggle="dropdown" 
              aria-expanded="false"
              title="<%= t('app_titles.users.info') %>">
              <i class="fas fa-user fa-lg"></i>
            </a> 
            <ul class="dropdown-menu user-actions-menu" aria-labelledby="profile">
              <li>
                <%= link_to profile_path(current_user), class: 'dropdown-item' do %>
                  <i class="fas fa-user-circle"></i>&nbsp; Your profile
                <% end %>  
              </li>
              <li>
                <%= link_to edit_user_registration_path, class: 'dropdown-item' do %>
                  <i class="fas fa-edit"></i>&nbsp; Edit user info
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do %>
                  <i class="fas fa-sign-out-alt"></i>&nbsp; Sign out
                <% end %>
              </li>       
            </ul>
          </li>
          <li class="nav-item">
            <%= link_to new_question_path, 
              class: 'nav-link btn btn-primary',
              title: t('app_titles.questions.new') do %>
              <i class="fas fa-plus fa-lg me-0"></i>
            <% end %> 
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, 
                class: 'btn btn-default px-4 py-2 fw-bold text-uppercase me-2' do %>
              <small>Login</small>
            <% end %>
          </li>
          <li class="nav-item mr-2">
            <%= link_to new_user_registration_path, 
                class: 'btn btn-primary px-4 py-2 fw-bold text-uppercase' do %>
              <small>Sign up</small>
            <% end %>
          </li>
        <% end %>
