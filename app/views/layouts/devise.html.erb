<!DOCTYPE html>
<html class="h-100">
  <head>
    <title>Questz | <%= devise_action(action_name, controller_name) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-light h-100">
    <div class="container h-100">
      <div class="row justify-content-center h-100">
        <div class="col-lg-6 col-md-9 col-sm-10 my-auto py-3">
          <h2 class="text-center logo-font my-auto mb-3">
            <%= link_to root_path do %>
              <%= inline_svg_tag("question.svg", id: "logo") %> <span>Questz</span>
            <% end %>
          </h2>
          <div class="card p-5">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
