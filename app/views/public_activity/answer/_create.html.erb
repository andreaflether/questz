<%= single_content_for :icon do %>
	<i class="fas fa-comment"></i> 
<% end %>

<%= single_content_for :action_body do %>
	posted a <%= activity.trackable_type.downcase %>
	<% if activity.trackable %>
		on
		<%= link_to activity.trackable.question.title,
			question_path(activity.trackable.question, anchor: "answer_#{activity.trackable.id}"), 
			class: 'fw-bold' %>
	<% else %>
		in a question that no longer exists
	<% end %>
<% end %>