<% if current_user.disliked?(votable) %>
  <%= link_to eval("like_#{votable_type}_path(votable)"),
    method: :patch,
    remote: true,
    class: 'text-muted like' do %>
    <i class="far fa-thumbs-up"></i> 
  <% end %>
  <span class="vote-count"><%= votable.get_upvotes.size %></span>
  <%= link_to eval("undislike_#{votable_type}_path(votable)"),
    method: :patch,
    remote: true,
    class: 'text-danger undislike' do %>
    <i class="fas fa-thumbs-down"></i> 
  <% end %>
  <span class="vote-count"><%= votable.get_downvotes.size %></span>
<% elsif current_user.liked?(votable) %>
  <%= link_to eval("unlike_#{votable_type}_path(votable)"),
    method: :patch,
    remote: true,
    class: 'text-success unlike' do %>
    <i class="fas fa-thumbs-up"></i> 
  <% end %>
  <span class="vote-count"><%= votable.get_upvotes.size %></span>
  <%= link_to eval("dislike_#{votable_type}_path(votable)"),
    method: :patch,
    remote: true,
    class: 'text-muted dislike' do %>
    <i class="far fa-thumbs-down"></i> 
  <% end %>
  <span class="vote-count"><%= votable.get_downvotes.size %></span>
<% else %>
  <%= link_to eval("like_#{votable_type}_path(votable)"),
    method: :patch,
    remote: true,
    class: 'text-muted like' do %>
    <i class="far fa-thumbs-up"></i> 
  <% end %>
  <span class="vote-count"><%= votable.get_upvotes.size %></span>
  <%= link_to eval("dislike_#{votable_type}_path(votable)"),
    method: :patch,
    remote: true,
    class: 'text-muted dislike' do %>
    <i class="far fa-thumbs-down"></i> 
  <% end %>
  <span class="vote-count"><%= votable.get_downvotes.size %></span>
<% end %>