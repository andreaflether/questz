<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
  <h4 class="mb-0">Tags</h4>
  <ul class="nav nav-pills small navigation-tabs">
    <li class="nav-item">
      <%= link_to 'Popular', tags_path, class: 'nav-link main-tab' %>
    </li>
    <li class="nav-item">
      <%= link_to 'Name', tags_path(alphabetic_order: true), 
        class: 'nav-link alphabetic_order' %>
    </li>
    <li class="nav-item">
      <%= link_to 'Newest', tags_path(newest: true), 
        class: 'nav-link newest' %>
    </li>
  </ul>
</div>

<div class="row" id="tags_row">
  <%= render partial: 'tags/partials/card_tag', collection: @tags, as: :tag %>
</div>

<div class="d-flex mt-2 flex-column flex-lg-row justify-content-between align-items-center ">
  <div class="entries-info flex-grow-1">
    <%= page_entries_info @tags %>
  </div>
  <div class="tags-pagination flex-shrink-0">
    <%= paginate @tags %>
  </div>
</div>